<UserControl x:Class="gestion_etablissement_1.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:gestion_etablissement_1.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- ViewModel -->
    <UserControl.DataContext>
        <vm:HomeViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Barre latérale -->
        <StackPanel Background="#6B1FD7" Grid.Column="0">
            <Button Content="Accueil"
                    Command="{Binding ShowAccueilCommand}"
                    Style="{StaticResource SideMenuButton}"/>

            <Button Content="Professeurs"
                    Command="{Binding ShowProfesseurCommand}"
                    Style="{StaticResource SideMenuButton}"/>

            <Button Content="Élèves"
                    Command="{Binding ShowEleveCommand}"
                    Style="{StaticResource SideMenuButton}"/>

            <Button Content="Classes"
                    Command="{Binding ShowClasseCommand}"
                    Style="{StaticResource SideMenuButton}"/>

            <Button Content="Cours"
                    Command="{Binding ShowCoursCommand}"
                    Style="{StaticResource SideMenuButton}"/>

            <Button Content="Emploi du temps"
                    Command="{Binding ShowEmploiDuTempsCommand}"
                    Style="{StaticResource SideMenuButton}"/>

            <Button Content="Déconnexion"
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource SideMenuButton}"/>
        </StackPanel>

        <!-- Contenu principal -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentView}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />
    </Grid>
</UserControl>
