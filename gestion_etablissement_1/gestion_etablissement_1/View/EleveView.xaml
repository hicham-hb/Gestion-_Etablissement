<UserControl x:Class="gestion_etablissement_1.View.EleveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:gestion_etablissement_1.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:EleveViewModel/>
    </UserControl.DataContext>

    <Grid Background="White" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Bandeau violet -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryColor}"
                Height="5" />

        <Grid Grid.Row="1" Margin="0,5,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- titre -->
                <RowDefinition Height="*"/>
                <!-- datagrid -->
                <RowDefinition Height="Auto"/>
                <!-- formulaire -->
                <RowDefinition Height="Auto"/>
                <!-- messages -->
                <RowDefinition Height="Auto"/>
                <!-- boutons -->
            </Grid.RowDefinitions>

            <!-- Titre -->
            <TextBlock Text="Liste des élèves"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="2,0,0,10"
                       Foreground="#333"/>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1"
                      Style="{StaticResource ClientDataGridStyle}"
                      ItemsSource="{Binding Eleves}"
                      SelectedItem="{Binding SelectedEleve}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom"
                                        Binding="{Binding Nom}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Prénom"
                                        Binding="{Binding Prenom}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Adresse"
                                        Binding="{Binding adresse}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Date de naissance"
                                        Binding="{Binding Date_naissance}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Formulaire -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="2,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Nom :" Width="110" Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextBox}"
                             Text="{Binding EleveNom, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Prénom :" Width="110" Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextBox}"
                             Text="{Binding ElevePrenom, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Adresse :" Width="110" Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextBox}"
                             Text="{Binding EleveAdresse, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Date de naissance :" Width="110" Style="{StaticResource FormLabel}"/>
                    <DatePicker Width="220"
                                SelectedDate="{Binding EleveDate_naissance, Mode=TwoWay}"/>
                </StackPanel>
            </StackPanel>

            <!-- Messages (erreur / succès) -->
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding SuccessMessage}"
                           Foreground="Green"
                           FontWeight="SemiBold"
                           Margin="0,2,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Boutons -->
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10">
                <Button Content="Ajouter"
                        Command="{Binding AddCommand}"
                        Style="{StaticResource PrimaryButton}"/>
                <Button Content="Modifier"
                        Command="{Binding EditCommand}"
                        Style="{StaticResource PrimaryButton}"/>
                <Button Content="Supprimer"
                        Command="{Binding DeleteCommand}"
                        Style="{StaticResource DangerButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
